/* pages/shoppingCar/shoppingCar.wxss */
page {
  background-color: #e6e6e6;
}
.addressView{
  background-color: white;
  display: flex;
  width: 100%;
  height: auto;
  margin-bottom: 20px;
  font-size: 15px;
  position: relative;
  overflow: hidden;
  padding-top: 10px;
  padding-bottom: 10px;
  border-top: 1px solid rgba(0, 0, 0, 0.1);
}
.address{
  color: rgba(0, 0, 0, 0.5);
  padding-left: 10px;
}
.addressImage{
  width: 20px;
  height: 20px;
  padding-left: 10px;
}
.addressEdit{
  color: orangered;
  position: absolute;
  right: 9px;
}
.cal-block{
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.cal-first{
  display: flex;
  padding:10px 10px 10px 10px;
  width: 100%;
  background-color: white;
  height: auto;
}
.title{
  color: red;
  padding-right: 10px;
}
.circle{
  width:30px;
  height:30px;
  margin-top: -10px;
  padding-right: 10px;
  padding-top: 8px;
}
.symble{
  width:10px;
  height:10px;
  padding-right: 5px;
  padding-top: 5px;
}
.extra{
  position: absolute;
  right: 10px;
  display: flex;
}
.hint{
  color: rgba(0, 0, 0, 0.5);
  font-size: 15px;
}

.item-list{
  background-color: white;
  width: 100%;
  height: auto;
  padding: 10px 10px 10px 10px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
}
.manjian{
  width: 27px;
  height: 18px;
}
.item-content{
  display: flex;
  padding: 10px 10px 10px 10px;
  font-size: 15px;
}
.item-extra{
  position: relative;
  display: flex;
}
.require{
  color: rgba(0, 0, 0, 0.6);
  font-size: 15px;
}
.vochure{
  position: absolute;
  right: 20px;
  font-size: 15px;
  color: red;
}
.checked{
  width: 15px;
  height: 15px;
  padding-top: 50px;
}
.ice{
  width: 78px;
  height: 102px;
  padding: 0 10px 0 10px;
}
/* .jiajian image{
  width: 30px;
