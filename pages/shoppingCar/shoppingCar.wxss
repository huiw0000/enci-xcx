} */
.detail{
  font-size: 13px;
  width: 70%;
}
.function{
  color: rgba(0, 0, 0, 0.5);
}
.price{
  display: flex;
  position: relative;
  padding-top: 40px;
  color: red;
}
.jiajian{
  position: absolute;
  right: 10px;
}
.shuzikuang{
  width:90px;
height:28px;
right: 10px;
position: absolute;
z-index: 1;
}
.jia{
  width: 15px;
  height: 15px;
  position: absolute;
  z-index: 2;
  right:16px;
  bottom:-21px;
}
.jian{
  width: 15px;
  height: 1px;
  position: absolute;
  z-index: 2;
  right:80px;
  bottom:-15px;
}

.extra-service{
  width:90%;
  margin-left:auto;
  background-color:greenyellow;
  margin-right:20px;
}
.firstLine{
  display: flex;
  position: relative;
  padding: 10px;
  font-size: 10px;
  color: orangered;
}
.secondLine{
  display: flex;
  position: relative;
  padding: 10px;
  font-size: 10px;
  color: orangered;
}
.firstLine image{
  width: 8px;
  height: 6px;
  position: absolute;
  top: 15px;
  right: 15px;
}
.secondLine image{
  width: 6px;
  height: 8px;
  position: absolute;
  top: 15px;
  right: 15px;
}
.number{
  position: absolute;
  color: rgba(0, 0, 0, 0.5) !important;
  right: 30px;
}
.service{
  margin-left: 20px;
}