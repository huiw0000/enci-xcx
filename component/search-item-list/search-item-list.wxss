/* component/search-item-list/search-item-list.wxss */
.item-list-image{
  width: 20vw;
  height: 27vw;
}
.first-line{
  display: flex;
}
.first-line view:last-child{
  padding-left: 20px;
  font-size: 15px;
  font-weight: 500;
  padding-top: 5px;
}
.details{
  width:70%;
  padding-bottom: 10px;
  height:auto;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);

}
.photo{
  width:30%;
}
.contain{
  display: flex;
  padding: 20px 20px 20px 20px;
}
.tab{
  font-size:8px;
  color:orangered;
  text-align:center;
  width:24px;
  height:12px;
  margin-top:8px;
  padding-top:2px;

}
.content{
  padding-top: 5px;
  font-size: 13px;
  opacity: 0.5;
}
.price-contain{
  display: flex;
  padding-top: 20px;
}
.previous-price{
  font-size: 12px;
  opacity: 0.5;
  text-decoration:line-through;
}
.now-price{
  color:orangered;
  font-size:15px;
  padding-left: 10px;
}