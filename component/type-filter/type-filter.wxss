/* component/type-filter/type-filter.wxss */
.type-filter{
  margin-top: 10px;
  padding-top:10px;
  padding-bottom: 10px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  border-top: 1px solid rgba(0, 0, 0, 0.1);
  display: flex;
}
.type-item{
  width:auto;
  display: flex;
  font-size: 13px;
  margin-left: 15px;
  opacity: 0.5;
  padding: 5px 10px 5px 10px;
  background-color: #e6e6e6;
  border-radius: 4px;
}
.type-item image{
  width: 10px;
  height: 10px;
  margin-top: 5px;
}